<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <!--we are using (<%%>) because we dont wantto akip special cheatchter
  since "=" will skip specail characetr so we r using this-->
  
  <%- include("./partials/nav.ejs") %>
  

  <div class="blogs content">
    <h2>All Blogs</h2>

    
<!--() we not using "=,-" beacause we doing some genric coding of js-->
<!-- <%=(i=0)%> -->
    <% if (blogs.length > 0) { %>
      
      <% blogs.forEach(blog =>{ %>
        <a class="single" href="/blog/<%=blog._id%>">
          <h3 class="title"><%=(i+=1)%> <%= blog.title %></h3>
          <p class="snippet"><%= blog.snippet %></p>
          <br>
        </a>
      <% }) %>
    <% } else { %>
      <p>There are no blogs to display...</p>
    <% } %>
    
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>